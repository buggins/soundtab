{
    "name": "soundtab",
    "description": "Theremin-like Synthesizer App with Wacom Tablet support",
    "homepage": "https://github.com/buggins/soundtab",
    "license": "Boost",
    "authors": ["Vadim Lopatin"],

    "targetName": "soundtab",
    "targetPath": "bin",
    "targetType": "executable",

    "stringImportPaths": ["views", "views/res"],

    "copyFiles-windows-x86_64": [
